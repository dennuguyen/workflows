{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "g++-release",
            "displayName": "Release build using g++",
            "description": "Configure using the GNU g++ compiler for Release builds",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "g++-release",
            "configurePreset": "g++-release",
            "description": "Build using g++ Release preset",
            "jobs": 4
        }
    ],
    "testPresets": [
        {
            "name": "test-release",
            "configurePreset": "g++-release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}